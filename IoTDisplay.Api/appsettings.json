{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Api": {
    "ListenerUrl": "http://*:5000",
    "Drivers": [
      {
        "DriverType": "eXoCooLd.Waveshare.EPaperDisplay",
        "Driver": "WaveShare7In5_V2",
        "RefreshTime": "2:00"
      }
    ],
    "Width": 800,
    "Height": 480,
    "Rotation": 0,
    "StateFolder": "/home/iotdisplay/",
    "BackgroundColor": "#ffffff",
    "ForegroundColor": "#000000"
  }
}
